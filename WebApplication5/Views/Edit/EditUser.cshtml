<h2 style="text-align:center;">Редактирования пользователя</h2>

<div class="container">
    <form asp-controller="Edit" asp-action="EditUser" method="post" asp-route-login="@Model.UserData.Login" asp-route-command="0">
        <div class="form-group form-inline row mt-5">
            <div class="col-lg-2"></div>
            <span class="input-group-prepend col-lg-3 input-group-text">
                Логин
            </span>
            <div class="col-lg-4">
                <div class="input-group">
                    <input type="text" class="form-control" readonly aria-label="Default" aria-describedby="inputGroup-sizing-default" value="@Model.UserData.Login">
                </div>
            </div>
        </div>
        <div class="form-group form-inline row mt-5">
            <div class="col-lg-2"></div>
            <span class="input-group-prepend col-lg-3 input-group-text">
                Пароль
            </span>
            <div class="col-lg-4">
                <div class="input-group">
                    <input type="text" class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default" name="password" value="@Model.UserData.Password">
                </div>
            </div>
        </div>
        <div class="form-group form-inline row mt-5">
            <div class="col-lg-2"></div>
            <span class="input-group-prepend col-lg-3 input-group-text">
                Уровень доступа
            </span>
            <div class="input-group col-lg-4">
                <select class="custom-select" id="inputGroupSelect01" name="role">
                    @for (int i = 0; i < Model.Roles.Length; i++)
                    {
                        if (Model.Roles[i].Equals(Model.Roles[Model.UserData.AccessLevel]))
                        {
                            <option value="@Model.Roles[i]" selected>@Model.Roles[i]</option>
                        }
                        else
                        {
                            <option value="@Model.Roles[i]">@Model.Roles[i]</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group form-inline row mt-5 mb-2">
            <div class="col-lg-2"></div>
            <div class="input-group col-lg-8">
                <div class="input-group-prepend">
                    <a class="btn btn-secondary" href="~/Edit/UsersList">Назад</a>
                    <input class="btn btn-secondary" type="submit" value="Сохранить">
                </div>
                <div class="input-group-append">
                    <input type="submit" class="btn btn-danger" formmethod="post" asp-controller="Edit" asp-action="EditUser" asp-route-login="@Model.UserData.Login" asp-route-password="@Model.UserData.Password" asp-route-role="@Model.Role" asp-route-command=1 value="Удалить">
                </div>
            </div>
        </div>
    </form>
</div>