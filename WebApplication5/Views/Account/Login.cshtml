<h2 class="text-center">Вход</h2>

<div class="container">
    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" role="form">
        <div class="form-group form-inline row mt-5">
            <div class="col-lg-2"></div>
            <span class="input-group-prepend col-lg-3 input-group-text">
                Логин
            </span>
            <div class="col-lg-4">
                <div class="input-group">
                    <input type="text" class="form-control" aria-label="Default" name="username" aria-describedby="inputGroup-sizing-default">
                </div>
            </div>
        </div>
        <div class="form-group form-inline row mt-5">
            <div class="col-lg-2"></div>
            <span class="input-group-prepend col-lg-3 input-group-text">
                Пароль
            </span>
            <div class="col-lg-4">
                <div class="input-group">
                    <input type="text" class="form-control" aria-label="Default" name="password" aria-describedby="inputGroup-sizing-default">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5"></div>
            <button type="submit" class="btn btn-outline-secondary col-lg-2 mt-5">Войти</button>
        </div>
    </form>
        @{
            if (Model.isCorrect == false)
            {
                <div class="mt-10 text-center">
                    <h3 style="color:red;">Неверное имя пользователя или пароль</h3>
                </div>
            }
        }
</div>